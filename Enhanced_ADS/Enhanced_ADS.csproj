<Project Sdk="Microsoft.NET.Sdk">
	<PropertyGroup>
		<TargetFramework>netstandard2.1</TargetFramework>
		<Nullable>enable</Nullable>
		<DuckovPath>E:\Steam\steamapps\common\Escape from Duckov\Duckov_Data</DuckovPath>
	</PropertyGroup>
	<ItemGroup>
		<Reference Include="$(DuckovPath)\Managed\Cinemachine.dll"/>
		<Reference Include="$(DuckovPath)\Managed\EasySave3.dll"/>
		<Reference Include="$(DuckovPath)\Managed\ItemStatsSystem.dll"/>
		<Reference Include="$(DuckovPath)\Managed\SodaLocalization.dll"/>
		<Reference Include="$(DuckovPath)\Managed\TeamSoda.*"/>
		<Reference Include="$(DuckovPath)\Managed\Unity*"/>
		<Reference Include="0Harmony">
			<HintPath>$(ProjectDir)0Harmony.dll</HintPath>
		</Reference>
	</ItemGroup>
	<Target Name="CopyAfterBuild" AfterTargets="Build">
		<ItemGroup>
			<ModFiles Include="$(TargetDir)0Harmony.dll" />
			<ModFiles Include="$(TargetDir)$(AssemblyName).dll" />
			<ModFiles Include="$(ProjectDir)info.ini" />
			<ModFiles Include="$(ProjectDir)preview.png" />
		</ItemGroup>
		<Copy SourceFiles="@(ModFiles)" DestinationFolder="$(DuckovPath)\Mods\$(AssemblyName)\" />
	</Target>
</Project>
